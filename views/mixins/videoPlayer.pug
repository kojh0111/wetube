mixin videoPlayer(video = {})
     .videoPlayer#jsVideoPlayer
         video(src=`/${video.src}`)
         .videoPlayer__controls
             .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                span#currentTime 00:00:00
             .videoPlayer__column
                #videoBar
                    #progressBar
             .videoPlayer__column
                span#totalTime 00:00:00
             .videoPlayer__column
                 span#jsVolumeBtn
                    i.fas.fa-volume-up
                 span#jsFullScreen
                    i.fas.fa-expand